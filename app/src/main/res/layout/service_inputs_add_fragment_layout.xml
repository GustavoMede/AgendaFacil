<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/service_inputs_add_fragment_beginGuideline"
        app:layout_constraintGuide_begin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/service_inputs_add_fragment_endGuideline"
        app:layout_constraintGuide_end="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/service_inputs_add_fragment_textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/service_inputs_add_fragment_endGuideline"
        app:layout_constraintStart_toStartOf="@id/service_inputs_add_fragment_beginGuideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quais os insumos necessários?"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/service_inputs_add_fragment_inputName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/service_inputs_add_fragment_endGuideline"
        app:layout_constraintStart_toStartOf="@id/service_inputs_add_fragment_beginGuideline"
        app:layout_constraintTop_toBottomOf="@id/service_inputs_add_fragment_textView"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Nome"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/service_inputs_add_fragment_inputDescription"
        app:layout_constraintEnd_toEndOf="@id/service_inputs_add_fragment_endGuideline"
        app:layout_constraintStart_toStartOf="@id/service_inputs_add_fragment_beginGuideline"
        app:layout_constraintTop_toBottomOf="@id/service_inputs_add_fragment_inputName"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Descrição"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/service_inputs_add_fragment_nextBtn"
        app:layout_constraintEnd_toEndOf="@id/service_inputs_add_fragment_endGuideline"
        app:layout_constraintStart_toStartOf="@id/service_inputs_add_fragment_beginGuideline"
        app:layout_constraintTop_toBottomOf="@id/service_inputs_add_fragment_inputDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#8E0E00"
        android:padding="15dp"
        android:text="Adicionar insumo"
        android:textColor="#1F1C18" />

</androidx.constraintlayout.widget.ConstraintLayout>